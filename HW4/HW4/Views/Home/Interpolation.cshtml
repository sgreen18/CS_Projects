@{
    ViewBag.Title = "Color Interpolation";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<p>Interpolate from one color to another.</p>
<p>Please enter a color in hexadecimal format: #AABBCC</p>

<form method="post" action="">
    <div>
        <label for="col1">Color 1: </label>
        <input type="text" name="col1" id="col1">
    </div>
    <div>
        <label for="col2">Color 2: </label>
        <input type="text" name="col2" id="col2">
    </div>
    <div>
        <label for="num">Number of colors: </label>
        <input type="number" name="num" id="num" step="1" min="1" max="" pattern="[0-9]*">
    </div>

    <input type="submit" value="Submit" id="submit">
</form>